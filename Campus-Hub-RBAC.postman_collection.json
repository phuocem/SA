{
  "info": {
    "_postman_id": "campus-hub-rbac",
    "name": "Campus Hub - RBAC Testing",
    "description": "Role-Based Access Control (RBAC) testing for Campus Hub Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Setup - Role Initialization",
      "item": [
        {
          "name": "Initialize Database (Run Once)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Check if roles were created', function() {",
                  "  pm.response.to.have.status([200, 201]);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/roles",
              "host": ["{{base_url}}"],
              "path": ["roles"]
            }
          }
        }
      ]
    },
    {
      "name": "User Management",
      "item": [
        {
          "name": "Register Admin User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200 || pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('admin_access_token', jsonData.access_token);",
                  "    pm.environment.set('admin_refresh_token', jsonData.refresh_token);",
                  "    pm.environment.set('admin_user_id', jsonData.user.user_id);",
                  "    console.log('Admin tokens saved');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"AdminPass123\",\n  \"name\": \"Admin User\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Register Staff User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200 || pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('staff_access_token', jsonData.access_token);",
                  "    pm.environment.set('staff_user_id', jsonData.user.user_id);",
                  "    console.log('Staff tokens saved');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"staff@example.com\",\n  \"password\": \"StaffPass123\",\n  \"name\": \"Staff User\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Register Regular User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200 || pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('user_access_token', jsonData.access_token);",
                  "    pm.environment.set('user_user_id', jsonData.user.user_id);",
                  "    pm.environment.set('user_role', jsonData.user.role.name);",
                  "    console.log('User tokens saved, Role: ' + jsonData.user.role.name);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"UserPass123\",\n  \"name\": \"Regular User\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        }
      ]
    },
    {
      "name": "Role Management",
      "item": [
        {
          "name": "Get All Roles (Admin Only)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Admin can view all roles', function() {",
                  "  pm.response.to.have.status(200);",
                  "  pm.expect(pm.response.json()).to.be.an('array');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{admin_access_token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/roles",
              "host": ["{{base_url}}"],
              "path": ["roles"]
            }
          }
        },
        {
          "name": "Get Role by ID (Admin Only)",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{admin_access_token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/roles/1",
              "host": ["{{base_url}}"],
              "path": ["roles", "1"]
            }
          }
        },
        {
          "name": "Try Get Roles as Regular User (Should Fail)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Regular user cannot view all roles', function() {",
                  "  pm.response.to.have.status(403);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{user_access_token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/roles",
              "host": ["{{base_url}}"],
              "path": ["roles"]
            }
          }
        }
      ]
    },
    {
      "name": "User Management Endpoints",
      "item": [
        {
          "name": "Get All Users (Admin Only)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Admin can view all users', function() {",
                  "  pm.response.to.have.status(200);",
                  "  pm.expect(pm.response.json()).to.be.an('array');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{admin_access_token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/users",
              "host": ["{{base_url}}"],
              "path": ["users"]
            }
          }
        },
        {
          "name": "Get Current User Profile",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{user_access_token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/users/me",
              "host": ["{{base_url}}"],
              "path": ["users", "me"]
            }
          }
        },
        {
          "name": "Assign Role to User (Admin Only)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{admin_access_token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/users/{{user_user_id}}/role/2",
              "host": ["{{base_url}}"],
              "path": ["users", "{{user_user_id}}", "role", "2"]
            }
          }
        },
        {
          "name": "Try Assign Role as Regular User (Should Fail)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Regular user cannot assign roles', function() {",
                  "  pm.response.to.have.status(403);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{user_access_token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/users/3/role/2",
              "host": ["{{base_url}}"],
              "path": ["users", "3", "role", "2"]
            }
          }
        }
      ]
    },
    {
      "name": "Permission Testing",
      "item": [
        {
          "name": "✅ Admin Can Access Everything",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Admin has access', function() {",
                  "  pm.response.to.have.status([200, 403, 404]); // Will depend on endpoint",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{admin_access_token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/roles",
              "host": ["{{base_url}}"],
              "path": ["roles"]
            }
          }
        },
        {
          "name": "⚠️ Staff Cannot Access Admin Routes",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Staff cannot access admin-only routes', function() {",
                  "  pm.response.to.have.status(403);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{staff_access_token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/roles",
              "host": ["{{base_url}}"],
              "path": ["roles"]
            }
          }
        },
        {
          "name": "❌ User Cannot Access Admin Routes",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('User cannot access admin-only routes', function() {",
                  "  pm.response.to.have.status(403);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{user_access_token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/roles",
              "host": ["{{base_url}}"],
              "path": ["roles"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {"key": "base_url", "value": "http://localhost:3000", "type": "string"},
    {"key": "admin_access_token", "value": "", "type": "string"},
    {"key": "admin_user_id", "value": "", "type": "string"},
    {"key": "staff_access_token", "value": "", "type": "string"},
    {"key": "staff_user_id", "value": "", "type": "string"},
    {"key": "user_access_token", "value": "", "type": "string"},
    {"key": "user_user_id", "value": "", "type": "string"},
    {"key": "user_role", "value": "", "type": "string"}
  ]
}
